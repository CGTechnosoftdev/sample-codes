<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeFilter" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <!--<item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>-->
        <item name="android:windowBackground">@color/windowBg</item>
    </style>

    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>

    <style name="text_blues">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/black_text_dark</item>

    </style>

    <style name="edittext_simple_border">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">@dimen/sp_14</item>

        <item name="android:textCursorDrawable">@drawable/cursordrable</item>
        <item name="android:textColor">@color/black_text_dark</item>
        <item name="android:textColorHint">@color/black_text_dark</item>
        <item name="android:background">@drawable/text_box_with_border</item>
    </style>

    <style name="reg_edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColorHint">@color/black_text</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawableLeft">@drawable/pass_icon</item>
        <item name="android:drawablePadding">@dimen/dp_15</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textCursorDrawable">@drawable/cursordrable</item>
        <item name="android:background">@drawable/text_box_with_border</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/feedTitle</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="SubHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/feedSubHeading</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="UserStatus">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/userStatus</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="FeedDes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/feedDes</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="emptyTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ButtonLoginSelector">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/text_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="emptyText">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonOrange">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/orange_button_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="FeedAudioDuration">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">@color/black_txt_audio_time</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/gray_txt_input</item>
        <item name="android:textColorHint">@color/gray_txt_hint</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextViewProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/profileText</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="EditTextProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/profileEditText</item>
        <item name="android:textColorHint">@color/gray_txt_hint</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="FeedShare">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/black_light_txt</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ButtonPostSelector">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/post_text_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ButtonPost">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black_btn_txt</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ButtonProfile">
        <item name="android:layout_width">135dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">@color/black_btn_txt</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/btn_profile_bg</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ButtonAudio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/orange_button_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ButtonUnBlock">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/orange_btn</item>
        <item name="android:background">@drawable/btn_profile_bg</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


</resources>
