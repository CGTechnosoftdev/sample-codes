        android:height="@dimen/dp_4">
        <shape>
            <corners android:radius="5dip" />
            <solid android:color="@color/transcolorPrimary" />
        </shape>
    </item>

    <item
        android:id="@android:id/secondaryProgress"
        android:height="@dimen/dp_4">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <solid android:color="@color/transcolorPrimary" />
            </shape>
        </clip>
    </item>

    <item
        android:id="@android:id/progress"
        android:height="@dimen/dp_4">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <solid android:color="@color/audio_progress" />
            </shape>
        </clip>
    </item>

</layer-list>