<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        card_view:cardElevation="@dimen/list_item_card_elevation"
        card_view:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/userPhoto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dp"
                    android:clickable="true"
                    android:src="@drawable/avatar_" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@+id/userPhoto"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_userName"
                        style="@style/Heading"
                        android:text="Name" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLocation"
                            style="@style/SubHeading"
                            android:layout_alignParentLeft="true"
                            android:layout_marginRight="10dp"
                            android:drawableLeft="@drawable/ic_location"
                            android:drawablePadding="5dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Location" />

                        <TextView
                            android:id="@+id/tv_time"
                            style="@style/SubHeading"
                            android:layout_toRightOf="@+id/tvLocation"
                            android:drawableLeft="@drawable/time_clock"
                            android:drawablePadding="5dp"
                            android:singleLine="true"
                            android:text="Date-Time" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="4dp"
                    android:src="@drawable/combo_btn"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/postingFlag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_posting"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_description"
                style="@style/FeedDes"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:autoLink="all"
                android:background="@color/white"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="description" />

            <ImageView
                android:id="@+id/iv_post_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:background="@color/gray_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/img_hug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/hug_selector" />

                <TextView
                    android:id="@+id/tv_totalHugs"
                    style="@style/FeedShare"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@+id/img_comment"
                    android:layout_toRightOf="@+id/img_hug"
                    android:text="0" />

                <ImageView
                    android:id="@+id/img_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:src="@drawable/comment_deselected" />

                <TextView
                    android:id="@+id/tv_numComment"
                    style="@style/FeedShare"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="6dp"
                    android:layout_toRightOf="@+id/img_comment"
                    android:text="0" />
            </RelativeLayout>

            <View
                android:id="@+id/view_01"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>